<% if @comment.persisted? %>
  <%= turbo_stream.append 'comments' do %>
    <%= render @comment %>
  <% end %>

  <%= turbo_stream.replace 'form' do %>
    <%= render partial: 'form', locals: { promotion: @comment.promotion, comment: Comment.new } %>
  <% end %>
<% end %>

<%= turbo_stream.replace 'flash' do %>
  <%= render partial: 'shared/flash_message', locals: { flash: @flash } %>
<% end %>
