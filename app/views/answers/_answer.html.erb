<div class="divider"></div>
<div class="rounded-box items-center">
  <div class="my-3">
    <span><%= render partial: 'shared/avatar', locals: { user: answer.user } %></span><%= answer.user.name %>
    <p class="text-right text-sm"><%= l(answer.created_at, format: :long) %></p>
  </div>
  <div class="m-5">
    <%= simple_format answer.body %>
  </div>
</div>
<% if logged_in? && current_user.own?(answer) %>
  <%= button_to answer_path(answer), method: :delete, data: { turbo_confirm: t('defaults.message.delete_confirm') } do %>
    <i class="fa-regular fa-trash-can"></i>
  <% end %>
<% end %>
