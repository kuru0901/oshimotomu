<% if @answer.persisted? %>
  <%= turbo_stream.append 'answers' do %>
    <%= render @answer %>
  <% end %>

  <%= turbo_stream.replace 'form' do %>
    <%= render partial: 'form', locals: { request: @answer.request, answer: Answer.new } %>
  <% end %>
<% end %>

<%= turbo_stream.replace 'flash' do %>
  <%= render partial: 'shared/flash_message', locals: { flash: @flash } %>
<% end %>
