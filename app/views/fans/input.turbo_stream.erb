<% if @request == "input_now" %>
  <%= turbo_stream.replace 'now_form' do %>
    <%= render partial: 'now_form', locals: { favorite: @favorite } %>
  <% end %>
  <%= turbo_stream.replace 'now_modal' do %>
    <%= render partial: 'contents/now_modal', locals: { content: Content.new, favorite_id: @favorite.id } %>
  <% end %>
<% elsif @request == "input_before" %>
  <%= turbo_stream.replace 'before_form' do %>
    <%= render partial: 'before_form', locals: { favorite: @favorite } %>
  <% end %>
  <%= turbo_stream.replace 'before_modal' do %>
    <%= render partial: 'contents/before_modal', locals: { content: Content.new, favorite_id: @favorite.id } %>
  <% end %>
<% end %>