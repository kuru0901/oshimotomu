<% if @request == "input_now" %>
  <%= turbo_stream.update 'now_form' do %>
    <%= render partial: 'form', locals: { favorite: @favorite, state: :now } %>
  <% end %>
<% elsif @request == "input_before" %>
  <%= turbo_stream.update 'before_form' do %>
    <%= render partial: 'form', locals: { favorite: @favorite, state: :before } %>
  <% end %>
<% end %>