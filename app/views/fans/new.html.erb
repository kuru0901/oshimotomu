<div class="container mx-auto px-4 my-3">
  <div class="alert my-5">
    <div>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      <span>続けて推し情報を登録してください</span>
    </div>
  </div>

  <article class="prose">
    <h2>現在の推し情報</h2>
    <div class="form-control">
      <%= form_with scope: :favorite, url: fans_path, method: :post, local: true do |f| %>
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, class: "input input-bordered w-full" %>
        <%= f.label :type, class: "label" %>
        <%= f.select :type, options_for_select(Favorite.types.keys), prompt: "選択してください" %>
        <%= f.label :decade, class: "label" %>
        <%= f.select :decade, options_for_select(Favorite.decades.keys), prompt: "選択してください" %>
        <%= f.label :gender, class: "label" %>
        <%= f.select :gender, options_for_select(Favorite.genders.keys), prompt: "選択してください" %>
        <div class="py-4">
          <%= f.submit '登録', class: "btn" %>
        </div>
      <% end %>
    </div>
    <h2>以前の推し情報</h2>
    <div class="form-control">
      <%= form_with scope: :favorite, url: fans_path, method: :post, local: true do |f| %>
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, class: "input input-bordered w-full" %>
        <%= f.label :type, class: "label" %>
        <%= f.select :type, options_for_select(Favorite.types.keys), prompt: "選択してください" %>
        <%= f.label :decade, class: "label" %>
        <%= f.select :decade, options_for_select(Favorite.decades.keys), prompt: "選択してください" %>
        <%= f.label :gender, class: "label" %>
        <%= f.select :gender, options_for_select(Favorite.genders.keys), prompt: "選択してください" %>
        <div class="py-4">
          <%= f.submit '登録', class: "btn" %>
        </div>
      <% end %>
    </div>
  </article>
</div>