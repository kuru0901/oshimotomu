<input type="checkbox" id="content-modal" class="modal-toggle" />
<div class="modal">
  <div class="modal-box">
    <%= form_with model: content, local: true do |f| %>
      <%= f.text_field :title, placeholder: '作品タイトルを入力してください', class: "input input-bordered w-full" %>
      <%= f.submit '追加', class: "btn my-3" %>
    <% end %>
    <div class="modal-action">
      <label for="content-modal" class="btn">閉じる</label>
    </div>
  </div>
</div>
