<% if @request == 'now_modal' %>
  <%= turbo_stream.replace 'now_form' do %>
    <%= render partial: 'fans/now_form', locals: { favorite: @favorite } %>
  <% end %>
  <%= turbo_stream.replace 'now_modal' do %>
    <%= render partial: 'now_modal', locals: { content: Content.new, favorite_id: @favorite&.id } %>
  <% end %>
<% elsif @request == 'before_modal' %>
  <%= turbo_stream.replace 'before_form' do %>
    <%= render partial: 'fans/before_form', locals: { favorite: @favorite } %>
  <% end %>
  <%= turbo_stream.replace 'before_modal' do %>
    <%= render partial: 'before_modal', locals: { content: Content.new, favorite_id: @favorite&.id } %>
  <% end %>
<% end %>


