<%= turbo_frame_tag "before_modal" do %>
  <input type="checkbox" id="before-modal" class="modal-toggle" />
  <div class="modal">
    <div class="modal-box">
      <%= form_with model: content, local: true do |f| %>
        <%= f.text_field :title, placeholder: '作品タイトルを入力してください', class: "input input-bordered w-full" %>
        <%= f.submit '追加', class: "btn" %>
        <%= f.hidden_field :favorite_id, value: favorite_id %>
      <% end %>
      <div class="modal-action">
        <label for="before-modal" class="btn">閉じる</label>
      </div>
    </div>
  </div>
<% end %>
