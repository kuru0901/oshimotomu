<div class="card w-80 bg-neutral text-primary-content m-3">
  <div class="card-body">
    <h2><%= link_to promotion.name, promotion_path(promotion), class: "card-title" %></h2>
    <p class="self-end"><%= l(promotion.created_at, format: :long) %></p>
    <p><%= promotion.existence_i18n %></p>
    <p><%= promotion.decade_i18n %></p>
    <p><%= promotion.gender_i18n %></p>
    <p><%= promotion.group&.name %></p>
    <p><%= promotion.content&.title %></p>
    <p>by <%= promotion.user.name %></p>
  </div>
</div>
