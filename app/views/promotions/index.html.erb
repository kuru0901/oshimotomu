<% breadcrumb :promotions %>
<div class="container mx-auto px-4 my-3">
  <div class="form-control">
    <%= search_form_for @q do |f| %>
      <div class="input-group py-2">
        <span class="bg-neutral"><%= f.label 'キーワード' %></span>
        <%= f.search_field :name_or_description_cont, class: "input input-bordered w-3/4 max-w-xs", placeholder: "空欄でも検索できます" %>
      </div>
      <div class="input-group py-2">
        <span class="bg-neutral"><%= f.label :existence %></span>
        <%= f.select :existence_eq, Promotion.existences_i18n.invert.map {|k, v| [k, Promotion.existences[v]]}, {include_blank: '指定しない'}, {class: "select select-bordered w-3/4 max-w-xs"} %>
      </div>
      <div class="input-group py-2">
        <span class="bg-neutral"><%= f.label :decade %></span>
        <%= f.select :decade_eq, Promotion.decades_i18n.invert.map {|k, v| [k, Promotion.decades[v]]}, {include_blank: '指定しない'}, {class: "select select-bordered w-3/4 max-w-xs"} %>
      </div>
      <div class="input-group py-2">
        <span class="bg-neutral"><%= f.label :gender %></span>
        <%= f.select :gender_eq, Promotion.genders_i18n.invert.map {|k, v| [k, Promotion.genders[v]]}, {include_blank: '指定しない'}, {class: "select select-bordered w-3/4 max-w-xs"} %>
      </div>
      <%= f.submit class: "btn py-2" %>
    <% end %>
  </div>
  <%= link_to '布教を作成', new_promotion_path, class: 'btn mt-5' %>
  <% if @promotions.count > 0 %>
    <%= render @promotions %>
  <% else %>
    <div class="alert my-5">
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <span>布教が見つかりませんでした</span>
      </div>
    </div>
  <% end %>
  <%= paginate @promotions %>
  <p>好みに合う布教はありませんでしたか？</p>
  <%= link_to '推し募集を作成', new_request_path, class: "btn" %>
</div>