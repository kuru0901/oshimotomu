<div class="container mx-auto px-4 my-3">
  <article class="prose">
    <div class="form-control w-full">
      <%= form_with model: @promotion do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, placeholder: '山田たろう', class: "input input-bordered w-full" %>
        <%= f.label :description, class: "label" %>
        <%= f.text_area :description, placeholder: "例：2018年のライブが素晴らしいです。サブスクでも観られます！", class: "textarea textarea-bordered h-24 w-full" %>
        <div class="divider">詳細情報を登録すると検索してもらいやすくなります（任意）</div>
        <%= f.label :existence, class: "label" %>
        <%= f.select :existence, Promotion.existences_i18n.invert, { prompt: "選択してください" }, { class: "select select-bordered w-full max-w-sm" } %>
        <%= f.label :decade, class: "label" %>
        <%= f.select :decade, Promotion.decades_i18n.invert, { prompt: "選択してください" }, { class: "select select-bordered w-full max-w-sm" } %>
        <%= f.label :gender, class: "label" %>
        <%= f.select :gender, Promotion.genders_i18n.invert, { prompt: "選択してください" }, { class: "select select-bordered w-full max-w-sm" } %>
        <%= f.label :content_id, class: "label" %>
        <%= f.collection_select :content_id, Content.select(:id, :title).distinct, :id, :title, { prompt: "※選択肢に無い作品は追加することができます" }, { class: "select select-bordered w-full max-w-sm" } %>
        <label for="my-modal" class="btn modal-button">作品タイトル追加</label>
        <div class="py-4">
          <%= f.submit t('.save'), class: "btn" %>
        </div>
      <% end %>
    </div>
    <!-- ↓モーダル中身--Put this part before </body> tag -->
    <input type="checkbox" id="my-modal" class="modal-toggle" />
    <div class="modal">
      <div class="modal-box">
        <%= form_with model: @content, local: true do |f| %>
          <%= f.text_field :title, placeholder: '作品タイトルを入力してください', class: "input input-bordered w-full" %>
          <%= f.submit '追加', class: "btn" %>
          <%= f.hidden_field :route, value: new_promotion_path %>
        <% end %>
        <div class="modal-action">
          <label for="my-modal" class="btn">閉じる</label>
        </div>
      </div>
    </div>
    <!-- ↑モーダル中身--Put this part before </body> tag -->
  </article>
</div>
