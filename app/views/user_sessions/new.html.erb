<article class="prose">
  <h2><%= t('.title') %></h2>
  <div class="form-control">
    <%= form_with url: login_path, local: true do |f| %>
      <%= f.label :email, User.human_attribute_name(:email), class: "label" %>
      <%= f.email_field :email, class: "input input-bordered w-full" %>
      <%= f.label :password, User.human_attribute_name(:password), class: "label" %>
      <%= f.password_field :password, class: "input input-bordered w-full" %>
      <div class="py-4">
        <%= f.submit t('defaults.login'), class: "btn" %>
      </div>
    <% end %>
  </div>
  <%= link_to '新規ユーザー登録はこちら', new_user_path %>
</article>