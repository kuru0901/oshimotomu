<% content_for(:og_title, t('.title')) %>
<div class="flex justify-center h-screen w-screen items-center">
  <div class="w-full md:w-1/2 flex flex-col items-center " >
    <h1 class="text-center text-2xl font-bold text-primary mb-6"><%= t('.title') %></h1>
    <div class="w-3/4 mb-6">
      <%= form_with url: login_path, local: true do |f| %>
        <%= f.label :email, User.human_attribute_name(:email), class: "label" %>
        <%= f.email_field :email, class: "w-full py-4 px-8 input input-bordered rounded", placeholder: "***@example.com" %>
        <%= f.label :password, User.human_attribute_name(:password), class: "label" %>
        <%= f.password_field :password, class: "w-full py-4 px-8 input input-bordered rounded", placeholder: "password" %>
        <div class="py-4">
          <%= f.submit t('defaults.login'), class: "btn py-4 w-full rounded" %>
        </div>
      <% end %>
      <%= link_to auth_at_provider_path(provider: :twitter), class: 'btn twitter' do %>
        <i class="bi bi-twitter"></i>Twitterでログイン
      <% end %>
      <%= link_to '新規ユーザー登録はこちら', new_user_path %>
    </div>
  </div>
</div>
